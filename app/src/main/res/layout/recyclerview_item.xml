<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_background_right_corner"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/urgencyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_background_left_corner"
                android:inputType="textMultiLine"
                android:paddingEnd="5dp"
                android:layout_toRightOf="@id/titleView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:gravity="end"
                android:paddingRight="5dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9001579B"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_background_bottom"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>
